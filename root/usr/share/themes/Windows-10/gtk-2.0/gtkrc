	bg[NORMAL] = @bg_color
	bg[ACTIVE] = @bg_color
	bg[SELECTED] = @selected_bg_color
	bg[INSENSITIVE] = shade (0.95, @bg_color)

	engine "murrine" {
		roundness = 0
		gradient_shades = { 1.08, 1.08, 1.08, 1.08 }
		border_shades = { 1.0, 1.0 }
		trough_shades = { 1.08, 1.08 }
		trough_border_shades = { 0.8, 0.8 }
	}
}


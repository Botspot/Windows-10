	bg[ACTIVE] = shade (0.8, @bg_color)
	bg[INSENSITIVE] = shade (0.97, @bg_color)

	base[SELECTED] = shade (0.8, @base_color)
	base[INSENSITIVE] = shade (0.97, @base_color)
}


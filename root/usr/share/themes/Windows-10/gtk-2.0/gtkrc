	engine "pixmap"	{
		image {
			function	= RESIZE_GRIP
			recolorable	= FALSE
			detail		= "statusbar"
			overlay_file	= "assets/resize_grip.png"
			overlay_border	= {0,0,0,0 }
			overlay_stretch	= FALSE
		}
  }
}

